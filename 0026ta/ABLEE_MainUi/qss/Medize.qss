/*-----QStatusBar-----*/
QStatusBar
{
    background-color: #E0E1E7;
    color: #000000;
    border-color: #000000;
    margin-bottom: 2px;
    min-height : 32px;
}

QStatusBar::item {
    border: 2px;
    border-radius: 2px;
}

QStatusBar QLabel
{
    background-color: #E0E1E7;
}

/*QTabWidget Scroll Bar */
