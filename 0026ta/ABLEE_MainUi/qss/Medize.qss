QMainWindow::title {
    height: 20px;
    font-weight: bold;
}

QWidget{
    background-color: #e6e7eb;
}

/*-----QLabel-----*/
QLabel
{
    background-color: transparent;
    color: #000000;
    border-color: #000000;
}


/*-----QMenuBar-----*/

QMenuBar
{
    background-color: #2b579a;
    color: #ffffff;
    border-color: #000000;
}

QMenuBar::disabled
{
    background-color: #404040;
    color: #656565;
    border-color: #051a39;
}


QMenuBar::item
{
    background-color: transparent;
}

QMenuBar::item:selected
{
    background-color: #f0f5f3;
    color: #2b579a;
}


QMenuBar::item:pressed
{
    background-color: #dcdcdf;
    border: 1px solid #000;
    margin-bottom: -1px;
    padding-bottom: 1px;
}


QMenuBar::item:selected
{
    background-color: #f0f5f3;
    color: #2b579a;
}


QMenuBar::item:pressed
{
    background-color: #dcdcdf;
    border: 1px solid #000;
    margin-bottom: -1px;
    padding-bottom: 1px;
}


/*-----QMenu-----*/
QMenu
{
    background-color: #beccde;
    border: 1px solid;
    color: #000;
}


QMenu QWidget{
    background-color: transparent;

}


QMenu::separator
{
    height: 1px;
    background-color: #6d8eff;
    color: #ffffff;
    padding-left: 4px;
    margin-left: 10px;
    margin-right: 5px;
}

QMenu::item
{
    min-width : 150px;
    padding: 3px 20px 3px 20px;
}

QMenu::item:selected
{
    background-color: #d6e1f0;
    color: #000;
}

QMenu::item:disabled
{
    color: #262626;
}


/*-----QToolBar-----*/

QToolBar
{
    background-color: #2b579a;
    color: #ffffff;
    border-color: #000000;
    spacing: 2px;
}

QToolBar::separator
{
    background-color: #d6e1f0;
    width: 1px;
}

/*-----QToolButton-----*/
QToolButton
{
    background-color: #2b579a;
    color: #ffffff;
    border-color: #000000;
    padding: 4px 4px 4px 4px;
    font-size:11px;
}


QToolButton::hover
{
    background-color: #f0f5f3;
    color: #ffffff;
    border: 1px solid #fff;
}


QToolButton::checked:hover
{
    background-color: #f0f5f3;
    color: #ffffff;
    border-color: #fff;
}

QToolButton::pressed
{
    background-color: #4070b3;
    color: #ffffff;
    border: 1px solid #fff;
}


QToolButton::checked
{
    background-color: #f0f5f3;
    color: #ffffff;
    border-color: #f0f5f3;
    show-decoration-selected: 0;
    outline: 0;
}


/*-----QToolTip-----*/
QToolTip
{
    border: 1px solid black;
    background-color: #b2c1d5;
    border-radius: 0px;
    color: #000;
}


/*-----QLineEdit-----*/
QLineEdit
{
    background-color: #fefffc;
    color: #000000;
}

QLineEdit:focus
{
    background-color: #fefffc;
    border: 1px solid grey;
    border-radius: 2px;
}

QHeaderView
{
    font-size: 9pt;
}


QHeaderView::section
{
    background-color: #bfbfbf;
    color: #222629;
    text-align: left;
    padding: 2px;
    font-size: 10px;
}

QTableCornerButton::section
{
    background-color: #e8e8e8;
}

/*-----QComboBox-----*/
QComboBox
{
    background-color: #fefefe;
    border: 1px solid #1e1e1e;
    border-radius: 1px;
    padding: 2px 2px 2px 2px;
    color: #000;
    height: 20px;
    font-size:9pt;
}

QComboBox:hover
{
    background-color: #bfbfbf;

}

QComboBox QAbstractItemView
{
    background-color: #fefefe;
    color: #000;
    border: 1px solid black;
    selection-background-color: #124078;
    selection-color: #dcdcdf;
    outline: 0;
}

QComboBox::drop-down
{
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-left-width: 0px;
    border-left-color: darkgray;
    border-left-style: solid;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow
{
    image: url(":/icon/icon/tree-open.png");
    width:8px;
    height:8px;
}

/*-----QSpinBox-----*/
QSpinBox
{
    background-color: #fefefe;
    border-width: 1px;
    border-color: #1e1e1e;
    border-style: solid;
    color: #000;
    padding: 2px;
    selection-background-color: #4e4e8f;
}

QSpinBox::disabled
{
    background-color: #656565;
    color: #FFFFFF;
    border-color: #525252;
}

QSpinBox::up-button,
QSpinBox::down-button
{
	background-color: #fefefe;

}


QSpinBox::up-button:hover,
QSpinBox::down-button:hover
{
	background-color: #fefefe;

}


QSpinBox::up-button:pressed,
QSpinBox::down-button:pressed
{
	background-color: #ebebeb;
	border: 1px solid #ebebeb;

}


QSpinBox::down-arrow
{
    image: url(":/icon/icon/arrow-drop-down.ico");
    width: 8px;
}


QSpinBox::up-arrow
{
    image: url(":/icon/icon/arrow-drop-up.ico");
    width: 8px;

}


/*-----QSlider-----*/
QSlider
{
	background-color: transparent;
	padding: 2px;

}

QSlider::groove:horizontal
{
	subcontrol-origin: content;
	background-color: transparent;
	height: 15px;

}

QSlider::handle:horizontal
{
	background-color: #4ebfff;
	width: 15px;
	border-radius: 7px;

}

QSlider::sub-page:horizontal
{
	background-color: #999;
	margin: 5px;
	border-radius: 5px;

}

QSlider::add-page:horizontal
{
	background-color: #666;
	margin: 5px;
	border-radius: 5px;

}


/*-----QScrollBar-----*/
QScrollBar:horizontal
{
	background-color: #beccde;
	border: 1px solid darkgray;
	height: 15px;

}


QScrollBar::handle:horizontal
{
	border: 1px solid gray;
	min-width: 100px;
	background-color: #e6edf6;

}


QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
	width: 0px;
	background-color: transparent;

}


QScrollBar:vertical
{
	background-color: #beccde;
	border: 1px solid darkgray;
    width: 16px;

}

QScrollBar::handle:vertical
{
	border: 1px solid gray;
	min-height: 100px;
	background-color: #e6edf6;

}


QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical
{
	height: 0px;
	background-color: transparent;

}

